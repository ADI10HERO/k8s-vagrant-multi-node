$box_image = ENV["BOX_IMAGE"] || 'bento/ubuntu-16.04'.freeze

$storagecontroller = 'SATA Controller'
$storagecontrollerneedstobecreated = false

# bento Ubuntu image uses a SATA Controller by default so we start with one space more at port ID 2.
# Calulation in the code is done like this: (diskID - 1) + $diskIModifier
$diskIModifier = 2

if $kubernetes_pkg_version_suffix == ''
    $kubernetes_pkg_version_suffix = '-00'
end

$docker_version = '5:18.09.1~3-0~ubuntu-xenial'
